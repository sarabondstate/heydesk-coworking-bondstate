          = image_tag("delete.svg", class: 'icon')
      .modal-body
        p= translate('sign_up.country_changed_description')
        input.btn.btn-lg.btn-primary.btn-block data-dismiss='modal' value=translate('formtastic.actions.ok')

script
  = raw 'window.PRODUCTS = ' + sign_up_products_as_json + ';'
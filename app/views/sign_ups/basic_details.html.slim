h1= translate('menu.create_subscription')

=render partial: 'sign_ups/product'

=render partial: 'form'

.modal.fade#modal-window
  .modal-dialog
    .modal-content
      .modal-header
        h3.modal-title= translate('sign_up.country_changed')

.container
  =render partial: 'password_resets/index_content'

css:
  .container {
    max-width: 400px;
    margin-top: 70px;
    text-align: center;
  }

  #user_session_remember_me {
    font-weight: normal;
    margin-right: 10px;
  }

  form * {
    padding-left: 0;
  }

  form input[type="email"] {
    margin-bottom: -1px;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
  }

  form input[type="password"] {
    margin-bottom: 10px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }